{% extends 'base.html.twig' %}

{% block title %}{{ 'nav.archive_list'|trans }} - {{ 'app.name'|trans }}{% endblock %}

{% block header %}
<header class="bg-white shadow">
    <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center">
            <h1 class="text-3xl font-bold tracking-tight text-gray-900">{{ 'nav.archive_list'|trans }}</h1>
            <a href="{{ path('wacz_create') }}" 
               class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                </svg>
                {{ 'nav.new_archive'|trans }}
            </a>
        </div>
    </div>
</header>
{% endblock %}

{% block content %}
<div class="space-y-6">
    <!-- Filters and Statistics -->
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6">
            <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center space-y-4 sm:space-y-0">
                <!-- Filter Tabs -->
                <div class="flex space-x-1">
                    <a href="{{ path('wacz_list') }}" 
                       class="{% if current_status == 'all' %}bg-indigo-100 text-indigo-700{% else %}text-gray-500 hover:text-gray-700{% endif %} px-3 py-2 rounded-md text-sm font-medium">
                        {{ 'filters.all'|trans }} ({{ statistics.total }})
                    </a>
                    <a href="{{ path('wacz_list', {'status': 'pending'}) }}" 
                       class="{% if current_status == 'pending' %}bg-yellow-100 text-yellow-800{% else %}text-gray-500 hover:text-gray-700{% endif %} px-3 py-2 rounded-md text-sm font-medium">
                        {{ 'filters.pending'|trans }} ({{ statistics.pending }})
                    </a>
                    <a href="{{ path('wacz_list', {'status': 'completed'}) }}" 
                       class="{% if current_status == 'completed' %}bg-green-100 text-green-800{% else %}text-gray-500 hover:text-gray-700{% endif %} px-3 py-2 rounded-md text-sm font-medium">
                        {{ 'filters.completed'|trans }} ({{ statistics.completed }})
                    </a>
                    <a href="{{ path('wacz_list', {'status': 'failed'}) }}" 
                       class="{% if current_status == 'failed' %}bg-red-100 text-red-800{% else %}text-gray-500 hover:text-gray-700{% endif %} px-3 py-2 rounded-md text-sm font-medium">
                        {{ 'filters.failed'|trans }} ({{ statistics.failed }})
                    </a>
                </div>

                <!-- Cleanup Action -->
                <div class="flex items-center space-x-4">
                    <form method="post" action="{{ path('wacz_cleanup') }}" class="flex items-center space-x-2">
                        <input type="hidden" name="days" value="30">
                        <button type="submit" 
                                class="inline-flex items-center px-3 py-1 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50"
                                onclick="return confirm('{{ 'actions.delete_old_confirmation'|trans }}')">
                            <svg class="-ml-1 mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            {{ 'actions.clear_old'|trans }}
                        </button>
                    </form>
                    <form method="post" action="{{ path('wacz_delete_all') }}" class="flex items-center space-x-2">
                        <button type="submit" 
                                class="inline-flex items-center px-3 py-1 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50"
                                onclick="return confirm('{{ 'actions.delete_all_confirmation'|trans }}')">
                            <svg class="-ml-1 mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            {{ 'actions.delete_all'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Requests List -->
    {% if requests %}
    <div class="bg-white shadow rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ 'fields.title'|trans }}
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ 'fields.url'|trans }}
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ 'fields.status'|trans }}
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        {{ 'fields.created'|trans }}
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                            {{ 'fields.size'|trans }}
                        </th>
                    <th class="relative px-6 py-3">
                        <span class="sr-only">{{ 'fields.actions'|trans }}</span>
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% for request in requests %}
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4">
                        <div class="text-sm font-medium text-gray-900">
                            <a href="{{ path('wacz_show', {id: request.id}) }}" class="hover:text-indigo-600">
                                {{ request.title }}
                            </a>
                        </div>
                        {% if request.description %}
                        <div class="text-sm text-gray-500">
                            {{ request.description|length > 80 ? request.description|slice(0, 80) ~ '...' : request.description }}
                        </div>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4">
                        <div class="text-sm text-gray-900">
                            <a href="{{ request.url }}" target="_blank" class="hover:text-indigo-600" title="{{ request.url }}">
                                {{ request.url|length > 40 ? request.url|slice(0, 40) ~ '...' : request.url }}
                            </a>
                        </div>
                        <div class="text-sm text-gray-500">
                            {{ 'fields.depth'|trans }}: {{ request.maxDepth }}, {{ 'fields.max_pages'|trans }}: {{ request.maxPages }}
                        </div>
                    </td>
                    <td class="px-6 py-4">
                        {% if request.status == 'completed' %}
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                                {{ 'archive.status.completed'|trans }}
                            </span>
                        {% elseif request.status == 'processing' %}
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                                {{ 'archive.status.processing'|trans }}
                            </span>
                        {% elseif request.status == 'pending' %}
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                                {{ 'archive.status.pending'|trans }}
                            </span>
                        {% else %}
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                                {{ 'archive.status.failed'|trans }}
                            </span>
                        {% endif %}
                        
                        {% if request.duration %}
                        <div class="text-xs text-gray-500 mt-1">
                            {{ 'fields.time'|trans }}: {{ (request.duration) }}s
                        </div>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                        <div>{{ request.createdAt|date('Y-m-d H:i') }}</div>
                        {% if request.completedAt %}
                        <div class="text-xs">
                            {{ 'fields.completed_at'|trans }}: {{ request.completedAt|date('H:i') }}
                        </div>
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-500">
                        {% if request.fileSize %}
                            {{ (request.fileSize / 1024 / 1024)|round(1) }} MB
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td class="px-6 py-4 text-right text-sm font-medium">
                        <div class="flex justify-end space-x-2">
                            <a href="{{ path('wacz_show', {id: request.id}) }}" 
                               class="text-indigo-600 hover:text-indigo-900" title="{{ 'actions.view'|trans }}">
                                {{ 'actions.view'|trans }}
                            </a>
                            
                            {% if request.isCompleted() and request.filePath %}
                            <a href="{{ path('wacz_download', {id: request.id}) }}" 
                               class="text-green-600 hover:text-green-900" title="{{ 'actions.download'|trans }}">
                                {{ 'actions.download_archive'|trans }}
                            </a>
                            {% endif %}
                            
                            {% if request.status == 'pending' %}
                            <form method="post" action="{{ path('wacz_process', {id: request.id}) }}" class="inline">
                                <button type="submit" class="text-blue-600 hover:text-blue-900" title="{{ 'actions.start_processing'|trans }}">
                                    {{ 'actions.start_processing'|trans }}
                                </button>
                            </form>
                            {% endif %}
                            
                            <form method="post" action="{{ path('wacz_delete', {id: request.id}) }}" class="inline">
                                <button type="submit" 
                                        class="text-red-600 hover:text-red-900" 
                                        title="{{ 'actions.delete'|trans }}"
                                        onclick="return confirm('{{ 'actions.delete_confirmation'|trans }}')">
                                    {{ 'actions.delete'|trans }}
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    {% else %}
    <div class="bg-white shadow rounded-lg">
        <div class="px-4 py-5 sm:p-6 text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">{{ 'pages.no_archives'|trans }}</h3>
            <p class="mt-1 text-sm text-gray-500">
                {% if current_status == 'all' %}
                    {{ 'pages.no_archives_description'|trans }}
                {% else %}
                    {{ 'pages.no_archives_with_status'|trans }} "{{ current_status }}".
                {% endif %}
            </p>
            <div class="mt-6">
                <a href="{{ path('wacz_create') }}" 
                   class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700">
                    <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/>
                    </svg>
                    {{ 'actions.create_new_archive'|trans }}
                </a>
            </div>
        </div>
    </div>
    {% endif %}
</div>
{% endblock %}
